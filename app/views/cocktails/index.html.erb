<h1>Awesome Cocktails</h1>

<div class="row">
  <div class="col-sm-8">
    <ul>
    <% @cocktails.each do |cocktail| %>
      <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
    <% end %>
    </ul>
  </div>
  <div class="col-sm-4">
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.button :submit, class: "btn btn-success" %>
    <% end %>
  </div>
</div>
