<% content_for(:title_tag) do %>
  Awesome <%= @cocktail.name %>!!!
<% end %>

<div class="row">
  <ol class="breadcrumb">
    <li>
      <%= link_to "<< Back", cocktails_path, class: "btn btn-primary btn-xs" %>
    </li>
  </ol>
</div>
<div class="row">
  <div class="col-sm-12">
    <h1>
      <%= @cocktail.name %>
      <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, class: "btn btn-danger btn-xs align-right" %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div>
      <%= cl_image_tag @cocktail.photo, height: 150, crop: :fill %>
    </div>
    <div>
      <h3>Directions:</h3>
      <%= @cocktail.directions %>
    </div>
    <div>
      <h3>Ingredients:</h3>
      <% if @cocktail.doses.any? %>
        <ul>
          <% @cocktail.doses.each do |dose| %>
            <li>
              <%= dose.quantity %> | <%= dose.ingredient.name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>This cocktail has no ingredients yet.</p>
      <% end %>
    </div>
  </div>
</div>
